#include "Magasin.hpp"
#include <iostream>

typedef std::vector<Client> Clients;

Magasin::Magasin() {
  _idCourantClient = 0;
  _idCourantProduit = 0;
}

int Magasin::nbClients() const {
  return _clients.size();
}

void Magasin::ajouterClient(const std::string& nom) {
  Client c(_idCourantClient, nom);
  _clients.push_back(c);
  _idCourantClient++;
}

void Magasin::aficherClient() const {
  const Clients::iterator it;
  for (it = _clients.begins(); it!=_clients.end(); it++) {
    *it.afficherClient();
  }
}

void Magasin::supprimerClient(int idClient) {
  
}
